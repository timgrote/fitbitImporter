# AI Configuration for Fitbit Health Dashboard
# Copy this to ai_config.ini and add your API keys

[openai]
# OpenAI API for text generation (animal descriptions)
api_key = YOUR_OPENAI_API_KEY
model = gpt-4o-mini
temperature = 0.8
max_tokens = 200

[anthropic] 
# Claude API for text generation (alternative to OpenAI)
api_key = YOUR_ANTHROPIC_API_KEY
model = claude-3-haiku-20240307
temperature = 0.7
max_tokens = 200

[image_generation]
# Image generation service
provider = openai  # options: openai, stabilityai, replicate
api_key = YOUR_IMAGE_API_KEY

# OpenAI DALL-E settings
dalle_model = dall-e-3
dalle_size = 1024x1024
dalle_quality = standard

# Stability AI settings (if using stabilityai)
# stability_model = stable-diffusion-xl-1024-v1-0
# stability_samples = 1

[sleep_animal]
# Sleep animal generation settings
enabled = true
refresh_days = 7  # Generate new animal every 7 days
include_image = true
include_weekly_stats = true

# Randomization settings
use_seed_rotation = true  # Use date-based seeds for "random" but consistent weekly results
personality_weight = 0.3  # How much sleep patterns influence vs pure randomness (0.0-1.0)

# Animal variety settings
animal_categories = mammals,birds,marine,mythical,insects,reptiles
exclude_scary = true  # Avoid scary animals like spiders, snakes
max_description_length = 250

[features]
# Feature flags
sleep_animals_enabled = true
weekly_reports_enabled = false
sleep_coaching_enabled = false
dream_journal_enabled = false